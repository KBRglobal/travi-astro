---
interface Props {
  count?: number;
  columns?: 1 | 2 | 3 | 4;
  SkeletonComponent: any;
  className?: string;
}

const {
  count = 6,
  columns = 3,
  SkeletonComponent,
  className = ''
} = Astro.props;

const gridCols = {
  1: 'grid-cols-1',
  2: 'grid-cols-1 md:grid-cols-2',
  3: 'grid-cols-1 md:grid-cols-2 lg:grid-cols-3',
  4: 'grid-cols-1 md:grid-cols-2 lg:grid-cols-4'
}[columns];
---

<div class={`grid ${gridCols} gap-6 ${className}`}>
  {Array.from({ length: count }).map(() => (
    <SkeletonComponent />
  ))}
</div>
