---
import Skeleton from './Skeleton.astro';
---

<div class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-shadow">
  <!-- Image -->
  <Skeleton width="w-full" height="h-56" rounded="none" />

  <div class="p-6 space-y-4">
    <!-- Category Badge -->
    <Skeleton width="w-28" height="h-6" rounded="full" />

    <!-- Title -->
    <Skeleton width="w-4/5" height="h-7" />

    <!-- Description -->
    <div class="space-y-2">
      <Skeleton width="w-full" height="h-4" />
      <Skeleton width="w-full" height="h-4" />
      <Skeleton width="w-3/4" height="h-4" />
    </div>

    <!-- Location & Rating -->
    <div class="flex items-center justify-between pt-2 border-t border-gray-100 dark:border-gray-700">
      <div class="flex items-center gap-2">
        <Skeleton width="w-5" height="h-5" rounded="none" />
        <Skeleton width="w-32" height="h-4" />
      </div>
      <div class="flex items-center gap-1">
        <Skeleton width="w-5" height="h-5" rounded="none" />
        <Skeleton width="w-12" height="h-4" />
      </div>
    </div>

    <!-- CTA Button -->
    <Skeleton width="w-full" height="h-11" rounded="lg" />
  </div>
</div>
