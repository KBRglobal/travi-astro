---
import Skeleton from './Skeleton.astro';
---

<article class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-shadow">
  <!-- Featured Image -->
  <Skeleton width="w-full" height="h-56" rounded="none" />

  <div class="p-6 space-y-4">
    <!-- Category & Date -->
    <div class="flex items-center gap-3">
      <Skeleton width="w-28" height="h-5" rounded="full" />
      <Skeleton width="w-24" height="h-4" />
    </div>

    <!-- Title -->
    <Skeleton width="w-11/12" height="h-7" />

    <!-- Excerpt -->
    <div class="space-y-2">
      <Skeleton width="w-full" height="h-4" />
      <Skeleton width="w-full" height="h-4" />
      <Skeleton width="w-full" height="h-4" />
      <Skeleton width="w-4/5" height="h-4" />
    </div>

    <!-- Author & Read More -->
    <div class="flex items-center justify-between pt-4 border-t border-gray-100 dark:border-gray-700">
      <div class="flex items-center gap-3">
        <Skeleton width="w-10" height="h-10" rounded="full" />
        <div class="space-y-1">
          <Skeleton width="w-24" height="h-4" />
          <Skeleton width="w-20" height="h-3" />
        </div>
      </div>
      <Skeleton width="w-28" height="h-9" rounded="lg" />
    </div>
  </div>
</article>
